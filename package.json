{
  "name": "graphql-training",
  "version": "1.0.0",
  "description": "Training materials for GraphQL with Apollo Server, Lambda, TypeScript, PostgreSQL, and Prisma",
  "scripts": {
    "build": "tsc",
    "start": "serverless offline",
    "test": "jest",
    "deploy": "serverless deploy",
    "lint:biome": "biome lint .",
    "lint:eslint": "eslint --config eslint.config.js",
    "lint": "npm run lint:biome && npm run lint:eslint",
    "fix": "biome check --apply .",
    "format": "biome format . --write",
    "check": "biome check --apply .",
    "docker:up": "docker compose up -d",
    "prisma:migrate": "prisma migrate dev --name",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "gql:codegen": "graphql-codegen",
    "gen:doc": "spectaql spectaql-config.yml"
  },
  "keywords": ["graphql", "apollo", "lambda", "typescript", "postgresql", "prisma"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@as-integrations/aws-lambda": "^3.1.0",
    "@prisma/client": "^6.5.0",
    "dataloader": "^2.2.3",
    "graphql": "^16.10.0",
    "graphql-scalars": "^1.24.1",
    "graphql-shield": "^7.6.5",
    "pg": "^8.14.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@eddeee888/gcg-typescript-resolver-files": "^0.12.0",
    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-eslint/eslint-plugin": "^4.4.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@types/pg": "^8.11.11",
    "eslint": "^9.23.0",
    "jest": "^29.7.0",
    "prisma": "^6.5.0",
    "serverless": "^4.8.0",
    "serverless-offline": "^14.4.0",
    "spectaql": "^3.0.4",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  }
}
